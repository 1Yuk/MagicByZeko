<style>
    .parallax-container {
        position: relative;
        overflow: hidden;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #videofondozeko {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: brightness(70%);
    }

    .parallax-container h1 {
        font-weight: bold;
        font-size: 6rem;
        color: white; /* Cambia el color del texto según tu diseño */
        z-index: 1;
    }

    .sample-section {
        padding: 2.5rem;
    }

    .sample-section h2 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .sea2,
    .sea3 {
        min-height: 100vh;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    .sea2 {
        background-image: url("../public/fotopadmagicred.png");
    }

    .sea3 {
        background-image: url("../public/fotopadmagicred.png");
    }

    .container-logo-magic {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .child-logo-magic {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60%;
        transition: width 0.5s;
    }

    .logo-magic {
        width: 100%;
        height: auto;
        display: block;
    }

    .logo.small {
        width: 30%;
    }
</style>